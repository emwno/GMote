<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="30dp"
    android:minHeight="150dp"
    android:paddingTop="45dp"
    android:background="#FFFFFF"
    android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/volume_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <IconButton
                        android:onClick="onClick"
                        android:id="@+id/volumedown"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="{fa-minus}"
                        android:textSize="20dp" />

                    <IconButton
                        android:onClick="onClick"
                        android:id="@+id/mute_icon"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:text="{fa-volume-up}"
                        android:textSize="25dp" />
                    
                    <IconButton
                        android:onClick="onClick"
                        android:id="@+id/volumeup"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="{fa-plus}"
                        android:textSize="20dp" />
                    
                </LinearLayout>
                
                <LinearLayout
                    android:layout_marginTop="17dp"
                    android:layout_below="@+id/volume_holder"
                    android:id="@+id/misc_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <IconButton
                        android:onClick="onClick"
                        android:id="@+id/rotate"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:text="{fa-refresh}"
                        android:textSize="25dp" />
                    
                    <IconButton
                        android:onClick="onClick"
                        android:id="@+id/settings"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:text="{fa-gears}"
                        android:textSize="25dp" />
                </LinearLayout>

           
</RelativeLayout>